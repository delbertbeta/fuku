# Environment Variables

# S3 Storage Configuration
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=outfit-platform-images
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com
S3_CDN_URL=
S3_PREFIX=uploads/

# Storage Type (s3 or local)
IMAGE_STORAGE_TYPE=local
LOCAL_UPLOAD_DIR=./public/uploads

# Session Secret
SESSION_SECRET=your_session_secret_here

# Database
# Database Type (sqlite or mariadb)
DATABASE_TYPE=sqlite

# SQLite Configuration (when DATABASE_TYPE=sqlite)
DATABASE_PATH=./data/outfit-platform.db

# MariaDB Configuration (when DATABASE_TYPE=mariadb)
# Format: mysql://username:password@host:port/database
MARIADB_URL=mysql://outfit_user:secure_password@localhost:3306/outfit_platform

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Registration Control
ALLOW_REGISTRATION=true
